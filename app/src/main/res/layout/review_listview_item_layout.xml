<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_listitem_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Last"
        android:textSize="20dp" />

    <RatingBar
        android:id="@+id/review_listitem_ratingbar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:layout_below="@+id/review_listitem_name_textview"
        android:rating="5"
        android:stepSize=".5" />

    <TextView
        android:id="@+id/review_listitem_comment_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_listitem_ratingbar"
        android:text="Test\nTest\nTest\nTest\nTest\nTest" />
</RelativeLayout>